<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight">

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Explore Latest Feed"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorDark"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawablePadding="5dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/add_circle"
                android:text="Post Update"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileCard4"
                android:src="@mipmap/ic_launcher_round"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:id="@+id/nameCard4"
                android:text="Nandini Chhajed"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorDark"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/profileCard4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/timeCard4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameCard4"
                android:drawableLeft="@drawable/access_time"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/profileCard4"
                android:text="6m ago"
                android:textColor="@color/colorDark" />

            <TextView
                android:layout_toRightOf="@+id/timeCard4"
                android:text="Indore"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/location"
                android:layout_below="@id/nameCard4"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorDark"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imageCard4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/timeCard4"
                android:layout_marginTop="3dp"
                android:src="@drawable/sample" />

            <ImageButton
                android:id="@+id/likeCard4"
                android:layout_below="@id/imageCard4"
                android:layout_marginLeft="40dp"
                android:src="@mipmap/heart"
                android:background="@drawable/custom_loginbtn"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/commentCard4"
                android:layout_toRightOf="@id/likeCard4"
                android:layout_below="@id/imageCard4"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/comment"
                android:background="@drawable/custom_loginbtn"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@id/likeCard4"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textColor="@color/colorDark"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

