<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sliderOneImage"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/one" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_below="@id/sliderOneImage"
        android:background="@drawable/d_slider1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sliderOneImage">

        <TextView
            android:id="@+id/sliderOneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="Donate Blood"
            android:textColor="@color/colorLight"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sliderOneDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sliderOneTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Lorem Ipsum is simply dummy text \n of the printing and typesetting"
            android:textColor="@color/colorLight"
            android:textSize="18sp" />

    </RelativeLayout>


</RelativeLayout>