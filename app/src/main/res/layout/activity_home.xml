<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.HomeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/relativeToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include layout="@layout/main_toolbar" />

        </LinearLayout>

        <ScrollView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#CC4F4F">

                        <TextView
                            android:id="@+id/donorCountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="30dp"
                            android:text="120966"
                            android:textColor="@color/colorLight"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/donorCountText"
                            android:layout_marginLeft="22dp"
                            android:text="Donors"
                            android:textColor="@color/colorLight"
                            android:textSize="22sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/findDonorBtn"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/custom_loginbtn"
                            android:backgroundTint="@color/colorLight"
                            android:backgroundTintMode="add"
                            android:padding="10dp"
                            android:text="Find Donor"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#CC4F4F">

                        <TextView
                            android:id="@+id/seeRequestText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="30dp"
                            android:text="20976"
                            android:textColor="@color/colorLight"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/seeRequestText"
                            android:layout_marginLeft="22dp"
                            android:text="Request"
                            android:textColor="@color/colorLight"
                            android:textSize="22sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seeRequestBtn"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/custom_loginbtn"
                            android:backgroundTint="@color/colorLight"
                            android:backgroundTintMode="add"
                            android:padding="10dp"
                            android:text="See Request"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorLight"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:text="Explore Latest Feed"
                                android:textColor="@color/colorDark"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="20dp"
                                android:background="@android:color/transparent"
                                android:drawableLeft="@drawable/add_circle"
                                android:drawablePadding="5dp"
                                android:text="Post Update"
                                android:textAllCaps="false"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/profileCard4"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:src="@mipmap/ic_launcher_round" />

                            <TextView
                                android:id="@+id/nameCard4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/profileCard4"
                                android:text="Nandini Chhajed"
                                android:textColor="@color/colorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/timeCard4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/nameCard4"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@id/profileCard4"
                                android:drawableLeft="@drawable/access_time"
                                android:gravity="center"
                                android:text="6m ago"
                                android:textColor="@color/colorDark"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/nameCard4"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/timeCard4"
                                android:drawableLeft="@drawable/location"
                                android:gravity="center"
                                android:text="Indore"
                                android:textColor="@color/colorDark"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/imageCard4"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_below="@id/timeCard4"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/sample" />

                            <ImageButton
                                android:id="@+id/likeCard4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageCard4"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/custom_loginbtn"
                                android:padding="5dp"
                                android:src="@mipmap/heart" />

                            <ImageButton
                                android:id="@+id/commentCard4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageCard4"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@id/likeCard4"
                                android:background="@drawable/custom_loginbtn"
                                android:padding="5dp"
                                android:src="@mipmap/comment" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/likeCard4"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting"
                                android:textColor="@color/colorDark"
                                android:textSize="16sp" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/profileCard5"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:src="@mipmap/ic_launcher_round" />

                            <TextView
                                android:id="@+id/nameCard5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/profileCard5"
                                android:text="Archit Badjatya"
                                android:textColor="@color/colorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/timeCard5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/nameCard5"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@id/profileCard5"
                                android:drawableLeft="@drawable/access_time"
                                android:gravity="center"
                                android:text="1hr ago"
                                android:textColor="@color/colorDark"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/nameCard5"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/timeCard5"
                                android:drawableLeft="@drawable/location"
                                android:gravity="center"
                                android:text="Indore"
                                android:textColor="@color/colorDark"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/imageCard5"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_below="@id/timeCard5"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/sample" />

                            <ImageButton
                                android:id="@+id/likeCard5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageCard5"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/custom_loginbtn"
                                android:padding="5dp"
                                android:src="@mipmap/heart" />

                            <ImageButton
                                android:id="@+id/commentCard5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageCard5"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@id/likeCard5"
                                android:background="@drawable/custom_loginbtn"
                                android:padding="5dp"
                                android:src="@mipmap/comment" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/likeCard5"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting"
                                android:textColor="@color/colorDark"
                                android:textSize="16sp" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>



    </RelativeLayout>




    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorLight">

        <include
            layout="@layout/main_nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>