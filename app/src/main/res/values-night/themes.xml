<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BloodO" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/darkGray</item>
    </style>

    <style name="SplashTheme" parent="Theme.BloodO">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.BloodO.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BloodO.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BloodO.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>